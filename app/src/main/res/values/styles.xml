<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ApplicationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ApplicationTheme.RaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/royalblue</item>
        <item name="colorControlHighlight">@color/lightblue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ApplicationTheme.FlatButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/lightblue</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
    </style>

</resources>
